{
  "compilerOptions": {
    "module": "CommonJS",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "target": "ES2017",
    "outDir": "./dist",
    "baseUrl": "./",
    "plugins": [
      {
        "transform": "typescript-rtti/dist/transformer"
      }
    ]
  },
  "include": [
    "./main-reflect.ts"
  ]
}